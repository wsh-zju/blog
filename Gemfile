source "https://rubygems.org"

# 核心依赖
gem "jekyll", "~> 4.3"
gem "github-pages", group: :jekyll_plugins  # 兼容 GitHub Pages 的插件集合

# 常用插件
gem "jekyll-feed"            # RSS 订阅
gem "jekyll-seo-tag"         # SEO 优化
gem "jekyll-sitemap"         # 生成站点地图
gem "jekyll-paginate"        # 文章分页
gem "jekyll-archives"        # 文章归档
gem "kramdown"               # Markdown 解析器
gem "kramdown-parser-gfm"    # GitHub Flavored Markdown 支持
gem "rouge"                  # 代码高亮

# 主题（示例：使用 minima 主题）
gem "minima", "~> 2.5"

# 开发依赖（可选）
group :development do
  gem "webrick"              # Ruby 3.0+ 需要
end